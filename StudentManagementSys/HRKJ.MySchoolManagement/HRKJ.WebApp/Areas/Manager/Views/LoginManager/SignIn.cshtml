@model HRKJ.WebApp.Areas.Manager.Data.Login.LoginViewModel
@{
    Layout = null;


}

<!DOCTYPE html>

<html lang="zh-cn" class="fullscreen-bg">
<head>
    <title>宏睿游戏工作室：学生管理系统</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!-- VENDOR CSS -->
    <link rel="stylesheet" href="~/Contents/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Contents/assets/vendor/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Contents/assets/vendor/linearicons/style.css">
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/Contents/assets/css/main.css">
    <!-- FOR DEMO PURPOSES ONLY. You should remove this in your project -->
    <link rel="stylesheet" href="~/Contents/assets/css/demo.css">
    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">
    <!-- ICONS -->
    <link rel="apple-touch-icon" sizes="76x76" href="~/Contents/assets/img/favicon.ico">
    <link rel="icon" type="image/png" sizes="96x96" href="~/Contents/assets/img/favicon.ico">
</head> 
<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle">
                <div class="auth-box ">
                    <div class="left">
                        <div class="content">
                            <div class="header">
                                <div class="logo text-center"><img src="~/Contents/assets/img/logo11.png" style="width:100px; height:93px;" alt="Klorofil Logo"></div>
                                <p class="lead">学生管理系统后台登入</p>
                            </div>

                            @using (Html.BeginForm("SignIn", "LoginManager", FormMethod.Post, new { @class = "form-auth-small" }))
                            {
                                <div class="form-group">
                                    <label for="Email" class="control-label sr-only">Email</label>
                                    @Html.TextBoxFor(l => l.Email, new { @class="form-control",placeholder="请输入你的邮件地址" })
                                </div>
                                <div class="form-group">
                                    <label for="Pwd" class="control-label sr-only">Password</label>
                                    @Html.PasswordFor(l => l.Pwd, new { @class = "form-control", placeholder = "请输入你的密码" })
                                </div>
                                <div class="form-group clearfix">
                                    <label class="fancy-checkbox element-left">
                                        @*<input type="checkbox">
                                        <span>记住我</span>*@
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-primary btn-lg btn-block">登&nbsp;&nbsp;&nbsp;&nbsp;录</button>
                                <div class="bottom">
                                    @*<span class="helper-text"><i class="fa fa-lock"></i> <a href="#">忘记密码?</a></span>*@
                                </div>
                            }

                        </div>
                    </div>
                    <div class="right">
                        <div class="overlay"></div>
                        <div class="content text">
                            <h1 class="heading">宏睿学生管理系统</h1>
                            <p>宏睿游戏工作室</p>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- END WRAPPER -->
</body>
</html>
