@model HRKJ.WebApp.Areas.Manager.Data.Students.StudentsAddViewModel
@{
    ViewBag.Title = "新增学生信息";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutPage1.cshtml";
    SelectList sl = ViewBag.ClassesList;
}

<div class="panel-heading">
    <h3 class="panel-title">新增学生信息</h3>
    <p class="panel-subtitle"></p>
</div>
<div class="panel-body">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">新增学生信息</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Add", "StudentsManager", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label for="RealName">学生名称：</label>
                            @Html.TextBoxFor(r => r.RealName, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("RealName")</span>
                        </div>

                        <div class="form-group">
                            <label for="BornDate">出生日期：</label>
                            <input type="date" name="BornDate" value="@Model.BornDate.ToString("yyyy-MM-dd")" class="form-control" />
                            <span class="text-danger">@Html.ValidationMessage("BornDate")</span>
                        </div>


                        <div class="form-group">
                            <label for="Gender">学生性别：</label>
                            <input type="radio" name="Gender" value="1" checked /> 男
                            <input type="radio" name="Gender" value="0" /> 女
                            <span class="text-danger">@Html.ValidationMessage("Gender")</span>
                        </div>

                        <div class="form-group">
                            <label for="Email">邮箱地址：</label>
                            @Html.TextBoxFor(r => r.Email, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("Email")</span>
                        </div>


                        <div class="form-group">
                            <label for="Phone">联系电话：</label>
                            @Html.TextBoxFor(r => r.Phone, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("Phone")</span>
                        </div>


                        <div class="form-group">
                            <label for="QQNumber">QQ号码：</label>
                            @Html.TextBoxFor(r => r.QQNumber, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("QQNumber")</span>
                        </div>

                        <div class="form-group">
                            <label for="WeChat">微信号码：</label>
                            @Html.TextBoxFor(r => r.WeChat, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("WeChat")</span>
                        </div>

                        <div class="form-group">
                            <label for="ClassesId">所属班级：</label>
                            @Html.DropDownListFor(r => r.ClassesId,sl, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("ClassesId")</span>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success" type="submit">保存</button>
                            <button class="btn btn-danger" type="reset">重置</button>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>

</div>

