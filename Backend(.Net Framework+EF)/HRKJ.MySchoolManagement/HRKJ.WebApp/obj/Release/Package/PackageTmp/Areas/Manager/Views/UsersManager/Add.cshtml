@model HRKJ.WebApp.Areas.Manager.Data.Users.UsersAddViewModel
@{
    ViewBag.Title = "新增用户信息";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutPage1.cshtml";
    SelectList sl = ViewBag.RolesList;
}

<div class="panel-heading">
    <h3 class="panel-title">新增用户信息</h3>
    <p class="panel-subtitle"></p>
</div>
<div class="panel-body">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">新增用户信息</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Add", "UsersManager", FormMethod.Post ,new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <label for="RealName">真实姓名：</label>
                            @Html.TextBoxFor(u => u.RealName, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("RealName")</span>
                        </div>

                        <div class="form-group">
                            <label for="BornDate">出生日期：</label>
                            <input type="date" name="BornDate" value="@Model.BornDate" class="form-control" />
                            <span class="text-danger">@Html.ValidationMessage("BornDate")</span>
                        </div>

                        <div class="form-group">
                            <label for="Gender">性&nbsp;&nbsp;&nbsp;&nbsp;别：</label>
                            <input type="radio" name="Gender" value="1" /> 男
                            <input type="radio" name="Gender" value="0" /> 女
                            <span class="text-danger">@Html.ValidationMessage("Gender")</span>
                        </div>

                        <div class="form-group">
                            <label for="Email">邮件地址：</label>
                            @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("Email")</span>
                        </div>

                        <div class="form-group">
                            <label for="Phone">联系电话：</label>
                            @Html.TextBoxFor(u => u.Phone, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("Phone")</span>
                        </div>

                        <div class="form-group">
                            <label for="Pwd">密&nbsp;&nbsp;&nbsp;&nbsp;码：</label>
                            @Html.PasswordFor(u => u.Pwd, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("Pwd")</span>
                        </div>

                        <div class="form-group">
                            <label for="QQNumBer">QQ号码：</label>
                            @Html.TextBoxFor(u => u.QQNumBer, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("QQNumBer")</span>
                        </div>

                        <div class="form-group">
                            <label for="WeChat">微信号码：</label>
                            @Html.TextBoxFor(u => u.WeChat, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("WeChat")</span>
                        </div>

                        <div class="form-group">
                            <label for="RolesId">身份编号：</label>
                            @Html.DropDownListFor(u => u.RolesId, sl, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("RolesId")</span>
                        </div>

                        <div class="form-group">
                            <label for="Photo">头&nbsp;&nbsp;&nbsp;&nbsp;像：</label>
                            <input type="file" name="Photo" class = "form-control" value="" />
                            <span class="text-danger">@Html.ValidationMessage("Photo")</span>
                        </div>


                        <div class="form-group">
                            <button class="btn btn-success" type="submit">保存</button>
                            <button class="btn btn-danger" type="reset">重置</button>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>

</div>

