
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutPage1.cshtml";
}

<!-- OVERVIEW -->
<div class="panel panel-headline">
    <div class="panel-heading">
        <h3 class="panel-title">学生管理欢迎界面</h3>
        <p class="panel-subtitle"></p>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <div class="metric">
                    <span class="icon"><i class="fa fa-home"></i></span>
                    <p>
                        <span class="number">@ViewBag.Classes</span>
                        <span class="title">管理班级数量</span>
                    </p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="metric">
                    <span class="icon"><i class="fa fa-user"></i></span>
                    <p>
                        <span class="number">@ViewBag.Students</span>
                        <span class="title">管理学生数量</span>
                    </p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="metric">
                    <span class="icon"><i class="fa fa-calculator"></i></span>
                    <p>
                        <span class="number">@ViewBag.Subjects</span>
                        <span class="title">共有科目数量</span>
                    </p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="metric">
                    <span class="icon"><i class="fa fa-image"></i></span>
                    <p>
                        <span class="number">@ViewBag.Exams</span>
                        <span class="title">考试次数</span>
                    </p>
                </div>
            </div>
        </div>
