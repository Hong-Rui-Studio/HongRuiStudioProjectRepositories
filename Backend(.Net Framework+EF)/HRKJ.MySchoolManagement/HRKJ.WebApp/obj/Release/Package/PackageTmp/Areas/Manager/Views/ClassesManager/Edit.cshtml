@model HRKJ.WebApp.Areas.Manager.Data.Classes.ClassesEditViewModel
@{
    ViewBag.Title = "编辑班级信息";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutPage1.cshtml";
    SelectList sl = ViewBag.GradesList;
}

<div class="panel-heading">
    <h3 class="panel-title">编辑班级信息</h3>
    <p class="panel-subtitle"></p>
</div>
<div class="panel-body">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">编辑班级信息</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Edit", "ClassesManager", FormMethod.Post))
                    {

                        <div class="form-group">
                            @Html.HiddenFor(r => r.Id)
                        </div>
                        <div class="form-group">
                            <label for="GradesId">所属年级：</label>
                            @Html.DropDownListFor(r => r.GradesId, sl, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("GradesId")</span>
                        </div>

                        <div class="form-group">
                            <label for="Title">班级名称：</label>
                            @Html.TextBoxFor(r => r.Title, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("Title")</span>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success" type="submit">保存</button>
                            <button class="btn btn-danger" type="reset">重置</button>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>

</div>

