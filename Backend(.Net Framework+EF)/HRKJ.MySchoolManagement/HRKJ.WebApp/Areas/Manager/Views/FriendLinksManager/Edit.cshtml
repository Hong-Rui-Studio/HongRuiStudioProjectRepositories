@model HRKJ.WebApp.Areas.Manager.Data.FriendLinks.FriendLinksEditViewModel
@{
    ViewBag.Title = "编辑友情链接信息";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutPage1.cshtml";
}

<div class="panel-heading">
    <h3 class="panel-title">编辑友情链接信息</h3>
    <p class="panel-subtitle"></p>
</div>
<div class="panel-body">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">编辑友情链接信息</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Edit", "FriendLinksManager", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.HiddenFor(f => f.Id)
                        </div>
                        <div class="form-group">
                            <label for="Title">友情链接名称：</label>
                            @Html.TextBoxFor(r => r.Title, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("Title")</span>
                        </div>

                        <div class="form-group">
                            <label for="Link">友情链接路径：</label>
                            @Html.TextBoxFor(r => r.Link, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("Link")</span>
                        </div>

                        <div class="form-group">
                            <label for="IsShow">是否显示在页面：</label>
                            <div class="row">
                                @if (Model.IsShow == 1)
                                {
                                    <p class="col-sm-1">
                                        <input type="radio" name="IsShow" value="1" checked /> <span>显示</span>
                                    </p>
                                    <p class="col-sm-1 col-sm-offset-1">
                                        <input type="radio" name="IsShow" value="0" /> <span>不显示</span>
                                    </p>
                                }
                                else
                                {
                                    <p class="col-sm-1">
                                        <input type="radio" name="IsShow" value="1"  /> <span>显示</span>
                                    </p>
                                    <p class="col-sm-1 col-sm-offset-1">
                                        <input type="radio" name="IsShow" value="0" checked /> <span>不显示</span>
                                    </p>
                                }
                            </div>

                            <span class="text-danger">@Html.ValidationMessage("IsShow")</span>
                        </div>


                        <div class="form-group">
                            <button class="btn btn-success" type="submit">保存</button>
                            <button class="btn btn-danger" type="reset">重置</button>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>

</div>


