@model HRKJ.WebApp.Areas.Manager.Data.Seos.SeosEditViewModel
@{
    ViewBag.Title = "编辑优化信息";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutPage1.cshtml";
    SelectList sl = ViewBag.MenusList;
}

<div class="panel-heading">
    <h3 class="panel-title">编辑优化信息</h3>
    <p class="panel-subtitle"></p>
</div>
<div class="panel-body">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">编辑优化信息</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Edit", "SeosManager", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.HiddenFor(r => r.Id)
                        </div>
                        <div class="form-group">
                            <label for="Title">优化菜单名称：</label>
                            @Html.TextBoxFor(r => r.Title, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("Title")</span>
                        </div>

                        <div class="form-group">
                            <label for="Keyword">优化关键字：</label>
                            @Html.TextBoxFor(r => r.Keyword, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("Keyword")</span>
                        </div>

                        <div class="form-group">
                            <label for="Description">优化描述：</label>
                            @Html.TextAreaFor(r => r.Description, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("Description")</span>
                        </div>

                        <div class="form-group">
                            <label for="WebMenusId">选择优化菜单界面：</label>
                            @Html.DropDownListFor(r => r.WebMenusId, sl, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessage("WebMenusId")</span>
                        </div>


                        <div class="form-group">
                            <button class="btn btn-success" type="submit">保存</button>
                            <button class="btn btn-danger" type="reset">重置</button>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>

</div>


